{
  "id": "media_player",
  "name": "Media Player",
  "version": "1.0.0",
  "description": "Full-featured media player for audio and video playback with GStreamer backend",
  "author": "OpenCarDev Team",
  "type": "ui",
  "dependencies": [],
  "platforms": ["linux", "all"],
  "entry_point": "media_player.so",
  "config_schema": "config_schema.json",
  "requirements": {
    "min_core_version": "1.0.0",
    "required_permissions": [
      "audio",
      "filesystem",
      "network",
      "event"
    ],
    "system_packages": {
      "debian": [
        "libgstreamer1.0-dev",
        "libgstreamer-plugins-base1.0-dev",
        "libgstreamer-plugins-good1.0-dev",
        "gstreamer1.0-plugins-ugly",
        "gstreamer1.0-libav",
        "gstreamer1.0-alsa",
        "gstreamer1.0-pulseaudio",
        "gstreamer1.0-pipewire",
        "gstreamer1.0-v4l2"
      ]
    }
  },
  "metadata": {
    "category": "multimedia",
    "icon": "mdi:music",
    "supported_formats": [
      "mp3", "flac", "wav", "ogg", "opus", "aac", "m4a", "wma",
      "mp4", "mkv", "avi", "webm", "mov", "flv"
    ],
    "features": [
      "audio_playback",
      "video_playback",
      "hardware_decode",
      "gapless_playback",
      "metadata_extraction",
      "playlist_management",
      "bluetooth_audio",
      "radio_dab",
      "streaming_services"
    ],
    "engine": {
      "name": "GStreamer",
      "version": "1.0+",
      "swappable": true,
      "interface": "IMediaEngine"
    }
  }
}
