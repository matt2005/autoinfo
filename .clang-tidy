Checks: >
  -*,
  bugprone-*,
  performance-*,
  readability-*,
  modernize-*,
  cppcoreguidelines-avoid-c-arrays,
  cppcoreguidelines-no-malloc,
  hicpp-no-malloc
WarningsAsErrors: ''
HeaderFilterRegex: '^(src|extensions)/'
FormatStyle: none
# Qt-specific: allow slots/signals macros and generated moc files
ExtraArgs: [
  '-DQT_CORE_LIB',
  '-DQT_GUI_LIB',
  '-DQT_QUICK_LIB',
  '-DQT_WEBSOCKETS_LIB',
  '-DQT_POSITIONING_LIB',
  '-DQT_MULTIMEDIA_LIB',
  '-DQT_CONNECTIVITY_LIB'
]

# Limit suggestions for include order etc., relying on clang-format.
CheckOptions:
  - { key: readability-braces-around-statements.ShortStatementLines, value: '2' }
  - { key: modernize-use-nullptr.NullMacros, value: 'NULL' }
