{
  "application": {
    "name": "Crankshaft Reborn",
    "version": "1.0.0",
    "log_level": "info"
  },
  "websocket": {
    "enabled": true,
    "port": 8080,
    "max_clients": 10
  },
  "extensions": {
    "directory": "extensions",
    "auto_load": true,
    "enabled_extensions": [
      "media_player",
      "navigation",
      "bluetooth"
    ]
  },
  "display": {
    "platform": "eglfs",
    "width": 1280,
    "height": 720,
    "multi_display": false,
    "displays": [
      {
        "id": "primary",
        "output": "HDMI1",
        "width": 1280,
        "height": 720
      }
    ]
  },
  "theme": {
    "mode": "dark",
    "primary_color": "#2196F3",
    "accent_color": "#FF5722"
  }
}
